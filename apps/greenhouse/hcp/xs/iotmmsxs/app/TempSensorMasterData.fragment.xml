<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:Grid defaultSpan="L12 M12 S12" width="auto">
        <l:content>
            <f:SimpleForm id="GeneralInfoTemperature" width="100%" maxContainerCols="2"
                editable="false" layout="ResponsiveGridLayout" columnsL="2" columnsM="2"
                labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0">
                <f:content>
                    <core:Title text="Sensor Info" />
                    <Label text="Name" />
                    <Link text="{/name}" emphasized="true" target="_blank" href="{/url}" />
                    <Label text="Type" />
                    <Text text="{/type}" />
                    <Label text="Gateway" />
                    <Text text="{/gateway}" />
                    <core:Title text="Measurements" />
                    <Label text="No" />
                    <Text text="{/count}" />
                    <Label text="First at" />
                    <Text text="{/first}" />
                    <Label text="Last at" />
                    <Text text="{/last}" />
                </f:content>
            </f:SimpleForm>
        </l:content>
    </l:Grid>
</core:FragmentDefinition>
